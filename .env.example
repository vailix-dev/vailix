# Vailix Configuration

# Shared Secret (required for both SDK and server)
# Must be the same value on client and server
VAILIX_APP_SECRET=your-secret-key-here

# SDK Configuration (for @vailix/mask)
VAILIX_REPORT_URL=https://your-server.com/v1/report
VAILIX_DOWNLOAD_URL=https://your-server.com/v1/download

# Server Configuration (for @vailix/drop)
DATABASE_URL=mongodb://localhost:27017/vailix
PORT=3000
HOST=0.0.0.0

# Rate Limiting (optional, defaults shown)
RATE_LIMIT_MAX=300
RATE_LIMIT_WINDOW_MS=60000

# Firebase App Check (optional, for attestation)
FIREBASE_PROJECT_ID=your-project-id
